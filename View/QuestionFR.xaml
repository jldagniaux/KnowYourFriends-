<Window x:Class="KnowYourFriends.View.QuestionFR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowYourFriends.View"
        mc:Ignorable="d"
        Title="QuestionFR" Height="450" Width="800" Loaded="DisplayInfoQuestion">
    <Grid>
        <TextBlock x:Name="TextBlockQuestionIndex" HorizontalAlignment="Left" Margin="100,50,0,0" TextWrapping="Wrap" Text="Index of the question" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlockQuestion" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Text="Question" VerticalAlignment="Top" FontSize="36" Width="500" TextAlignment="Center"/>
        <Button x:Name="ButtonYes" Content="OUI" HorizontalAlignment="Left" Margin="275,300,0,0" VerticalAlignment="Top" Height="50" Width="75" Click="ButtonYes_Click"/>
        <Button x:Name="ButtonNo" Content="NON" HorizontalAlignment="Left" Margin="475,300,0,0" VerticalAlignment="Top" Height="50" Width="75" Click="ButtonNo_Click"/>
        <Image HorizontalAlignment="Left" Height="45" Margin="650,300,0,0" VerticalAlignment="Top" Width="100" Source="/View/cesi_RVB_ENT.png"/>
    </Grid>
</Window>
