<Window x:Class="KnowYourFriends.View.Quitter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowYourFriends.View"
        mc:Ignorable="d"
        Title="Quitter" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TextBlockQuestion" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="Êtes vous sûr de vouloir quitter ?" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="ButtonYes" Content="OUI" HorizontalAlignment="Left" Margin="250,200,0,0" VerticalAlignment="Top" Height="50" Width="75" Click="ButtonYes_Click"/>
        <Button x:Name="ButtonNo" Content="NON" HorizontalAlignment="Left" Margin="475,200,0,0" VerticalAlignment="Top" Height="50" Width="75" Click="ButtonNo_Click"/>
        <Image HorizontalAlignment="Left" Height="45" Margin="650,300,0,0" VerticalAlignment="Top" Width="100" Source="/View/cesi_RVB_ENT.png"/>
    </Grid>
</Window>
